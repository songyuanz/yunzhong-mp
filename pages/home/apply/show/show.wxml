<view class="page">
  <view class="page__bd">
    <view class="weui-cells">
      <view class="weui-cell">
        <view class="weui-cell__bd">姓名</view>
        <view class="weui-cell__ft">{{applicationDetail.name}}</view>
      </view>
      <view class="weui-cell">
        <view class="weui-cell__bd">身份证号</view>
        <view class="weui-cell__ft">{{applicationDetail.id_no}}</view>
      </view>
      <view class="weui-cell">
        <view class="weui-cell__bd">
          <view class="weui-uploader">
            <view class="weui-uploader__hd">
              <view class="weui-uploader__title">身份证正面(国徽面)</view>
            </view>
            <view class="weui-uploader__bd">
              <view class="weui-uploader__files">
                <view class="weui-uploader__file">
                  <image class="weui-uploader__img" src="https://www.yunzhongkeji.info/storage/{{applicationDetail.pic_id}}" mode="aspectFill" bindtap="previewImage"></image>
                </view>
              </view>
            </view>
          </view>
        </view>
      </view>
      <view class="weui-cell">
        <view class="weui-cell__bd">
          <view class="weui-uploader">
            <view class="weui-uploader__hd">
              <view class="weui-uploader__title">身份证反面(人像面)</view>
            </view>
            <view class="weui-uploader__bd ">
              <view class="weui-uploader__files">
                <view class="weui-uploader__file">
                  <image class="weui-uploader__img" src="https://www.yunzhongkeji.info/storage/{{applicationDetail.pic_id_face}}" mode="aspectFill" bindtap="previewImage"></image>
                </view>
              </view>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>